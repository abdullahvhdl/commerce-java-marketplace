	<modelVersion>4.0.0</modelVersion>
	<groupId>com.respodo</groupId>
	<artifactId>commerce</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>commerce</name>
	<modules>
		<module>commerce-common</module>
		<module>commerce-repository</module>
		<module>commerce-service</module>
		<module>commerce-web-client</module>
		<module>commerce-web-admin</module>
